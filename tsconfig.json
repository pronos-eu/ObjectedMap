{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "outDir": "lib",
      "rootDir": ".",
      "sourceMap": true,
      "strict": false,
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "typeRoots" : ["./node_modules/@types"],
      "isolatedModules": true,
      "declaration": true,
      "newLine": "LF"
    },
    "include": [
      "**/*"
    ]
  }
  